@model AppUserLoginModel
<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.87.0">
    <title>Signin Template · Bootstrap v5.1</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">
    <!-- Bootstrap core CSS -->
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/sign.css" rel="stylesheet">
</head>
<body class="text-center">
    <main class="form-signin">
        <form asp-action="Login" method="post">
            @*<img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">*@
            <h1 class="h3 mb-3 fw-normal">Giriş Yap</h1>

            <div class="form-floating">
                <label for="UserName" class="sr-only">
                    Kullanıcı Adı:
                    <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                </label>
                <input asp-for="@Model.UserName" class="form-control" id="floatingInput" placeholder="Kullanıcı Adınız">

            </div>

            <div class="form-floating mt-3">
                <label for="Password" class="sr-only">Şifre:</label>
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Şifreniz">
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input asp-for="@Model.RememberMe" type="checkbox"> Beni Hatırla
                </label>
            </div>
            <button asp-for="" class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
            <div  class="text-danger mt-1" asp-validation-summary="ModelOnly"></div>
            @*<p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>*@
        </form>
    </main>



</body>
</html>
